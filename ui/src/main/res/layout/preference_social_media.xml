<layout>
  <androidx.constraintlayout.widget.ConstraintLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:minHeight="?attr/listPreferredItemHeight"
      android:padding="8dp"
      tools:layout_height="48dp"
      >

    <TextView
        android:id="@android:id/title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/blank"
        />

    <TextView
        android:id="@android:id/summary"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/blank"
        />

    <ImageView
        android:id="@+id/google_play"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/blank"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/blogger"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/google_play"
        />

    <ImageView
        android:id="@+id/blogger"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/blank"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/google_plus"
        app:layout_constraintStart_toEndOf="@+id/google_play"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/blogger_icon"
        />

    <ImageView
        android:id="@+id/google_plus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/blank"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/facebook"
        app:layout_constraintStart_toEndOf="@+id/blogger"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/google_plus"
        />

    <ImageView
        android:id="@+id/facebook"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/blank"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/google_plus"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/facebook_icon"
        />

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
