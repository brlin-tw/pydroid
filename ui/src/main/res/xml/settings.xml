<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.preference.PreferenceCategory android:key="application_settings">

        <com.pyamsoft.pydroid.ui.preference.ListPreferenceCompat
            android:dialogTitle="@string/dark_mode_title"
            android:entries="@array/dark_mode_names_v1"
            android:entryValues="@array/dark_mode_values_v1"
            android:key="@string/dark_mode_key"
            android:summary="@string/dark_mode_summary"
            android:title="@string/dark_mode_title"
            app:iconCompat="@drawable/ic_visibility_24dp" />

        <com.pyamsoft.pydroid.ui.preference.PreferenceCompat
            android:key="@string/about_license_key"
            android:summary="@string/about_license_summary"
            android:title="@string/about_license_title"
            app:iconCompat="@drawable/ic_library_24dp" />

        <com.pyamsoft.pydroid.ui.preference.PreferenceCompat
            android:key="@string/check_version_key"
            android:summary="@string/check_version_summary"
            android:title="@string/check_version_title"
            app:iconCompat="@drawable/ic_get_app_24dp" />

        <com.pyamsoft.pydroid.ui.preference.PreferenceCompat
            android:key="@string/upgrade_info_key"
            android:summary="@string/upgrade_info_summary"
            android:title="@string/upgrade_info_title"
            app:iconCompat="@drawable/ic_whatshot_24dp" />

        <com.pyamsoft.pydroid.ui.preference.PreferenceCompat
            android:key="@string/clear_all_key"
            android:summary="@string/clear_all_summary"
            android:title="@string/clear_all_title"
            app:iconCompat="@drawable/ic_warning_24dp" />

    </androidx.preference.PreferenceCategory>

</androidx.preference.PreferenceScreen>